<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:focusable="true" android:focusableInTouchMode="true">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:theme="@style/EditTextInputLabelForm"
        app:hintTextAppearance="@style/MyHintText">

        <EditText
            android:id="@+id/iedt_Batch"
            style="@style/EditTextInputStyle"
            android:hint="Batch Number" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_rcpt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:theme="@style/EditTextInputLabelForm"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/edtRcptDate"
                style="@style/EditTextInputStyle"
                android:drawableRight="@drawable/date"
                android:focusable="false"
                android:hint="Date"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_rcpt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:theme="@style/EditTextInputLabelForm"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/edtRcptTime"
                style="@style/EditTextInputStyle"
                android:drawableRight="@drawable/clock_icon"
                android:focusable="false"
                android:hint="Time"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/itxtLay_Ext_Hatchery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:theme="@style/EditTextInputLabelForm"
        app:hintTextAppearance="@style/MyHintText">

        <EditText
            android:id="@+id/iedt_Ext_Hatchery"
            style="@style/EditTextInputStyle"
            android:focusable="false"
            android:hint="External Hatchery"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:theme="@style/EditTextInputLabelForm"
        app:hintTextAppearance="@style/MyHintText">

        <EditText
            android:id="@+id/iedt_Airway_Bill"
            style="@style/EditTextInputStyle"
            android:hint="Airway Bill Number" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/itxt_NoofEggs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:theme="@style/EditTextInputLabelForm"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/iedt_Eggs"
                style="@style/EditTextInputStyle"
                android:hint="No. of Eggs Recieved"
                android:numeric="integer"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_DeadEggs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:theme="@style/EditTextInputLabelForm"
            app:hintTextAppearance="@style/MyHintText">

            <EditText
                android:id="@+id/iedt_Dead_Eggs"
                style="@style/EditTextInputStyle"
                android:hint="No. of Eggs Dead"
                android:numeric="integer"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/btn_scan_bg"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>